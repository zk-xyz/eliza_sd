# Sober Dad Eliza Chatbot Environment Variables

# General Settings
NODE_ENV=production
PORT=10000
HOST=0.0.0.0

# Agent Service Settings
SERVICE_TYPE=agent

# Model Provider Settings
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Client Service Settings (when SERVICE_TYPE=client)
VITE_SERVER_URL=https://sober-dad-agent.onrender.com

# Memory and Storage Settings
MEMORY_ENABLED=true
MEMORY_STORAGE_TYPE=sqlite
MEMORY_STORAGE_PATH=./data/memory.sqlite

# Logging Settings
LOG_LEVEL=info
LOG_FORMAT=json

# Security Settings
CORS_ORIGIN=*
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000 